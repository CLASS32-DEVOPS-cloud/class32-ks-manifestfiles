apiVersion: v1
kind: Pod
metadata:
  name: bus-app-ph
  labels:
    app: portharcourt
spec:
  containers:
  - name: ph-container
    image: liontechacademy/portharcourt-bus-app:latest
    ports:
    - containerPort: 5000
---
apiVersion: v1
kind: Service
metadata:
  name: ph-nodeport-service
spec:
  type: NodePort
  selector:
    app: portharcourt
  ports:
    - port: 5000
      targetPort: 5000